@page
@model Connect4_Server.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

@* Login page
   - Shows a table of registered players.
   - Each row posts the internal DB Id of the player to sign in.
   - External PlayerId is shown for clarity but not used as the session key. *@

<h2>Login</h2>

@if (Model.Players.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Player ID</th>
                <th>Name</th>
                <th>Country</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var player in Model.Players)
            {
                <tr>
                    <td>@player.PlayerId</td>
                    <td>@player.FirstName</td>
                    <td>@player.Country</td>
                    <td>
                        @* Post the internal DB Id for this player.
                           Anti-forgery token is explicitly included for safety. *@
                        <form method="post" asp-antiforgery="true">
                            <input type="hidden" name="playerId" value="@player.Id" />
                            <button type="submit" class="btn btn-primary">Select</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No registered players found. Please <a asp-page="/Register">register here</a>.</p>
}
