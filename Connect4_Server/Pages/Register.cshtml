@page


@if (TempData["StatusMessage"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}

@model Connect4_Server.Pages.RegisterModel
@{
    ViewData["Title"] = "Player Registration";
}

<h2 class="mb-3">Player Registration</h2>

<form method="post" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-group mb-2">
        <label asp-for="Player.FirstName" class="form-label"></label>
        <input asp-for="Player.FirstName" class="form-control" placeholder="Enter your first name" />
        <span asp-validation-for="Player.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Player.PlayerId" class="form-label">Player ID (1–1000)</label>
        <input asp-for="Player.PlayerId" class="form-control" placeholder="Choose a unique number" />
        <span asp-validation-for="Player.PlayerId" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Player.Phone" class="form-label"></label>
        <input asp-for="Player.Phone" class="form-control" placeholder="Digits only" />
        <span asp-validation-for="Player.Phone" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Player.Country" class="form-label">Country</label>
        <select asp-for="Player.Country" class="form-select">
            <option value="">-- Select Country --</option>
            <option>Israel</option>
            <option>USA</option>
            <option>UK</option>
            <option>France</option>
            <option>Germany</option>
        </select>
        <span asp-validation-for="Player.Country" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
